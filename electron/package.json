{
  "name": "boiiiwd-electron",
  "version": "1.0.0",
  "description": "BOIII Workshop Downloader - Electron Frontend",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
  "dev": "electron .",
    "start-api": "python ../api/boiiiwd_api_improved.py",
    "build-backend": "python -m PyInstaller \"..\\api\\boiiiwd_api_improved.py\" --name boiiiwd_api --noconfirm --onefile --clean --hidden-import flask_cors --collect-submodules bs4 --distpath \"..\\backend_dist\" --workpath \"..\\backend_build\" --specpath \"..\\backend_build\"",
    "prebuild": "npm run build-backend",
    "prebuild-win": "npm run build-backend",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "npm run build-win",
    "pack": "npm run build-backend && electron-builder",
    "pack:win": "npm run build-backend && electron-builder --win"
  },
  "build": {
    "appId": "com.boiiiwd.electron",
    "productName": "BOIII Workshop Downloader",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "ui/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend_dist",
        "to": "backend"
      },
      {
        "from": "../boiiiwd_package",
        "to": "boiiiwd_package"
      },
      {
        "from": "../icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "../icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "electron-store": "^8.1.0",
    "node-fetch": "^2.7.0"
  }
}
